<%= form_for(location) do |f| %>
  <%= render 'shared/errors', object: f.object %>
  <div class="form-controls">
    Enter a Location <%= f.text_field :address %>
  </div>
  <%= f.hidden_field :street %>
  <%= f.hidden_field :city %>
  <%= f.hidden_field :country %>
  <%= f.hidden_field :postal_code %>
  <%= f.hidden_field :lat %>
  <%= f.hidden_field :lng %>
  <%= f.fields_for :location_users do |l| %>
    <div class="form-controls">
      <%= l.label :is_public, "Make Public" %>
      <%= l.check_box :is_public %>
    </div>
  <% end %>
  <%= select_tag :shared_users, options_from_collection_for_select(current_user.friends, 'id', 'email'), multiple: true %>
  <%= f.submit %>
<% end %>
